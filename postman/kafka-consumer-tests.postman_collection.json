                                    "pm.test('Response has statistics fields', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('uptime_seconds');",
                                    "    pm.expect(jsonData).to.have.property('messages_processed');",
                                    "    pm.expect(jsonData).to.have.property('kafka_connected');",
                                    "});",
                                    "",
                                    "pm.test('Uptime is a positive number', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.uptime_seconds).to.be.a('number');",
                                    "    pm.expect(jsonData.uptime_seconds).to.be.above(0);",
                                    "});",
                                    "",
                                    "pm.test('Kafka connected is boolean', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.kafka_connected).to.be.a('boolean');",
                                    "});"
