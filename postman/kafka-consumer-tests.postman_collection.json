    "item": [
        {
            "name": "Health Checks",
            "item": [
                {
                    "name": "Health Check",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has correct structure', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('status');",
                                    "    pm.expect(jsonData).to.have.property('uptime');",
                                    "    pm.expect(jsonData).to.have.property('kafka_connected');",
                                    "    pm.expect(jsonData).to.have.property('messages_processed');",
                                    "});",
                                    "",
                                    "pm.test('Status is healthy or degraded', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(['healthy', 'degraded']).to.include(jsonData.status);",
                                    "});",
                                    "",
                                    "pm.test('Messages count is a number', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.messages_processed).to.be.a('number');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/health",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Readiness Check",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200 or 503', function () {",
                                    "    pm.expect([200, 503]).to.include(pm.response.code);",
                                    "});",
                                    "",
                                    "pm.test('Response has status field', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('status');",
                                    "});",
                                    "",
                                    "pm.test('Ready status is correct', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    if (pm.response.code === 200) {",
                                    "        pm.expect(jsonData.status).to.eql('ready');",
                                    "    } else {",
                                    "        pm.expect(jsonData.status).to.eql('not_ready');",
                                    "    }",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/ready",
                            "host": [
                                "{{baseUrl}}"
                            ],
